<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">
<LinearLayout
    android:id="@+id/ll_user_vac_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_vacname_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Polio" />

    <TextView
        android:id="@+id/tv_desc_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description" />

    <TextView
        android:id="@+id/tv_location_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guwahati" />

    <TextView
        android:id="@+id/tv_paid_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Free Of Cost" />

    <TextView
        android:id="@+id/tv_time_date_uservacrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time and Date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:srcCompat="@drawable/vaccine" />

        <TextView
            android:id="@+id/tv_adminfeedrow_enrolled_count"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_weight="15"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="x 25"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_end_drive_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:backgroundTint="#00740F0F"
            android:text="End drive" />

        <Button
            android:id="@+id/bt_addfollow_up_info_admin"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Follow Up Info" />

        <Button
            android:id="@+id/bt_verifyQR_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:background="@color/transparent"
            android:text="Verify"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>