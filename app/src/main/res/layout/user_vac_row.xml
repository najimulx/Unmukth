<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/ll_user_vac_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="textStart"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vacname_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Polio" />

        <TextView
            android:id="@+id/tv_desc_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <TextView
            android:id="@+id/tv_location_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guwahati" />

        <TextView
            android:id="@+id/tv_paid_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Of Cost" />

        <TextView
            android:id="@+id/tv_time_date_uservacrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time and Date" />

        <Button
            android:id="@+id/bt_enroll_user_vac_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Enroll" />
    </LinearLayout>
</android.support.v7.widget.CardView>
