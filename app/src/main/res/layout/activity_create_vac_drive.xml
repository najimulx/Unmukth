<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        tools:context=".View.Admin.CreateVacDriveActivity">

        <Button
            android:id="@+id/bt_select_location_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Select Location"
             />

        <EditText
            android:id="@+id/et_location_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Select a Location"
            android:inputType="textMultiLine"
            />

        <EditText
            android:id="@+id/et_title_admin_create_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Title"
            android:inputType="textPersonName"
           />

        <EditText
            android:id="@+id/et_description_admin_create_vac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Description"
            android:inputType="textMultiLine"
           />

        <Spinner
            android:id="@+id/spinner_admin_create_vac"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />

        <CheckBox
            android:id="@+id/cb_enable_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enable Enrollment System"
            />

        <CheckBox
            android:id="@+id/cb_enable_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid"
           />

        <EditText
            android:id="@+id/et_price_create_vac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Amount"
            android:inputType="number"
            android:visibility="invisible"
             />

        <EditText
            android:id="@+id/et_date_createvac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName"
           />

        <EditText
            android:id="@+id/et_time_createvac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="Time"
            android:inputType="textPersonName"
           />

        <Button
            android:id="@+id/bt_create_vac_done_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>